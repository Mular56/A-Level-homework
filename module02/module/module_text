SELECT  'This is ' || name || ', ' ||  CASE WHEN gender = 'm' THEN 'he' ELSE 'she' END || ' has email ' || email AS info  FROM users;


SELECT v.name, COUNT (w.id) AS words FROM vocabulary v JOIN word w ON v.id = w.vocabulary_id GROUP BY v.name;

